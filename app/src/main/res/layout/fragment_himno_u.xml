<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.appumg2016gmail.appumg.himno_u">

    <!-- TODO: Update blank fragment layout -->

    <FrameLayout
        android:id="@+id/youtube_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginTop="126dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/T_Titulo"
        android:text="Letra"
        android:gravity="center"
        android:textColor="#FF0000"
        android:layout_below="@+id/youtube_layout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:textStyle="italic|bold"
        android:textSize="32dp"
        android:typeface="monospace"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/scrollView3"
        android:layout_below="@+id/T_Titulo"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/T_Titulo">




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/T_HimnoEncabezado"
                android:text="Estrofa1"
                android:layout_marginTop="6dp"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="italic"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/T_Coro"
                android:text="Coro"
                android:layout_below="@+id/T_HimnoEncabezado"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:textColor="#3F51B5"
                android:textStyle="italic|bold"
                android:textSize="25dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/T_HimnoCoro"
                android:text="Estrofa2"
                android:layout_below="@+id/T_Coro"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:textColor="#000000"
                android:textStyle="italic"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/T_Coro2"
                android:text="Coro"
                android:layout_below="@+id/T_HimnoCoro"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:textColor="#3F51B5"
                android:textStyle="italic|bold"
                android:textSize="25dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/T_HimnoCoro2"
                android:text="Estrofa3"
                android:layout_below="@+id/T_Coro2"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="italic"
                />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
