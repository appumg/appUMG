<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:background="#24cddc"
        app:cardElevation="2dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="10"
            app:civ_shadow_color="#aff75b"
            android:layout_width="114dp"
            android:layout_height="100dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/Ttumbl"
            android:layout_alignParentStart="true"
            android:layout_margin="1dp" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="110sp"
           android:orientation="vertical">

           <TextView
               android:text="Titulo"
               android:layout_width="263dp"
               android:layout_height="wrap_content"
               android:id="@+id/Ttitulo"
               android:textColor="#000000"
               android:layout_alignParentTop="true"
               android:layout_alignParentEnd="true"
               android:layout_toEndOf="@+id/Ttumbl"
               android:textStyle="normal|bold"
               android:textSize="20sp"
               tools:textSize="20sp"
               />
           <TextView
               android:text="hora y fecha"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/TfechaEvento"
                />
           <TextView
               android:text="fecha publicacion"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/TfechaPub"
               android:textColor="#999999"
               />
           <TextView
               android:text="publicado por:"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/TNombPublicador"
               android:textColor="#999999"
               android:layout_below="@+id/Ttumbl"
               android:layout_alignParentStart="true"
               />

       </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>