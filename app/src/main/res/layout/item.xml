<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.mikhaellopez.circularimageview.CircularImageView
        android:src="@mipmap/ic_launcher"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10"
        app:civ_shadow_color="#8BC34A"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/Ttumbl"
        android:layout_alignTop="@+id/Ttitulo"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="publicado por:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TNombPublicador"
        android:textColor="#999999"
        android:layout_below="@+id/Ttumbl"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Titulo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/Ttitulo"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/Ttumbl"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        tools:textSize="30sp" />

    <TextView
        android:text="fecha publicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TfechaPub"
        android:textColor="#999999"
        android:layout_alignBottom="@+id/Ttumbl"
        android:layout_toEndOf="@+id/Ttumbl"
        android:layout_marginBottom="12dp" />

    <TextView
        android:text="hora y fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TfechaEvento"
        android:textColor="#999999"
        android:layout_below="@+id/Ttitulo"
        android:layout_toEndOf="@+id/Ttumbl"
        />


</RelativeLayout>